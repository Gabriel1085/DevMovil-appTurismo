<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detalle.DetallesFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:background="#F8F5F5"
        android:backgroundTint="#F8F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/Titulo"
                android:layout_width="323dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-black"
                android:text="Volcan Galeras"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Image"
                android:layout_width="317dp"
                android:layout_height="284dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/Titulo"
                app:layout_constraintTop_toBottomOf="@+id/Titulo"
                app:srcCompat="@drawable/departamentodenarino" />

            <TextView
                android:id="@+id/Ubicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicaciòn"
                android:textColor="#070707"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/Image"
                app:layout_constraintTop_toBottomOf="@+id/Image" />

            <TextView
                android:id="@+id/Temperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temperatura"
                android:textColor="#070707"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/Ubicacion"
                app:layout_constraintTop_toBottomOf="@+id/Ubicacion" />

            <TextView
                android:id="@+id/Descripcion"
                android:layout_width="317dp"
                android:layout_height="169dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="37dp"
                android:justificationMode="inter_word"
                android:text="Localizacion: El volcán Galeras se localiza en el Departamento de Nariño, aproximadamente a 9 km al occidente de la Ciudad de San Juan de Pasto, capital de este departamento, en las coordenadas 1° 13' 43,8&quot; de latitud norte y 77° 21' 33,0&quot; de longitud oeste y con una altura de 4276 msnm."
                android:textColor="#070707"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/Temperatura"
                app:layout_constraintTop_toBottomOf="@+id/Temperatura" />

            <TextView
                android:id="@+id/Actividades"
                android:layout_width="312dp"
                android:layout_height="84dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:text="actividades"
                android:textColor="#070707"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/Descripcion"
                app:layout_constraintTop_toBottomOf="@+id/Descripcion" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>